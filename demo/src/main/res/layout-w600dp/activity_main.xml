<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <!--    <TextView-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:text="Hello World!"-->
    <!--        app:layout_constraintBottom_toBottomOf="parent"-->
    <!--        app:layout_constraintLeft_toLeftOf="parent"-->
    <!--        app:layout_constraintRight_toRightOf="parent"-->
    <!--        app:layout_constraintTop_toTopOf="parent" />-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center">

            <EditText
                android:id="@+id/file_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="16"
                android:hint="文件url"
                android:inputType="text" />

            <Button
                android:id="@+id/open_file_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打开输入文件url" />

            <Button
                android:id="@+id/open_docx_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打开docx" />

            <Button
                android:id="@+id/open_docx_emed_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="嵌入打开docx" />

            <Button
                android:id="@+id/open_xlsx_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打开xlsx" />

            <Button
                android:id="@+id/open_pptx_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打开pptx" />

            <Button
                android:id="@+id/open_pdf_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打开pdf" />

            <Button
                android:id="@+id/open_jpg_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打开jpg" />

            <Button
                android:id="@+id/open_mp4_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打开mp4" />

            <Button
                android:id="@+id/open_mp3_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打开mp3" />

            <Button
                android:id="@+id/open_wps_edit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WPS编辑" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/custom_container"
            android:background="@android:color/holo_red_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="200dp"
            android:layout_marginRight="200dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>